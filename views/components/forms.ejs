            </svg>
            <p>Upload Image</p></button> 

    </form>
</div>
<script>
    const addPhotoClassFormContainer = document.getElementById('addPhotoClassFormContainer');
    const close_addproductForm = document.getElementById('close_addproductForm');
    close_addproductForm.onclick = function() {
        addPhotoClassFormContainer.classList.remove('flex');
        addPhotoClassFormContainer.classList.add('hidden');
    };

    const uploadImgBtn = document.getElementById('uploadImgBtn');
    uploadImgBtn.onclick = function() {
        fileInput.click();
    };

    const fileInput = document.getElementById('productImage');
    fileInput.addEventListener('change', () => {
        const files = fileInput.files;
        if (files.length > 5) {
        showToast('error', 'You can upload a maximum of 5 images.');
        fileInput.value = ''; // Clear selection
        uploadImgBtn.innerHTML = `Upload Image`;
        return;
        }

        const fileNames = Array.from(files).map(file => file.name).join(', ');
        uploadImgBtn.innerHTML = `<span class="inline-block max-w-full whitespace-nowrap overflow-hidden text-ellipsis align-middle">${fileNames}</span>`;

    });
</script>
