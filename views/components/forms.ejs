 <div id="addPhotoClassFormContainer" class="hidden fixed flex-col gap-3 bg-black/60 items-center justify-center w-full h-full z-50">
    <!-- add product -->
    <form id="AddPhotoClassFoorm" class="bg-white p-5 rounded-2xl w-md">
        <div class="mb-5 flex flex-row justify-between">
            <div class="text-gray-900 font-semibold text-xl">Add photo to class</div>
